all: 

install: 
	$(MKDIR_P) $(DESTDIR)$(destdir)
	for i in $(FILES) ; do \
	    $(INSTALL_DATA) $(srcdir)/$$i $(DESTDIR)$(destdir) ; \
	done 

clean:

distclean: clean
	$(RM) $(srcdir)/*.bak $(srcdir)/*\~ $(srcdir)/"#"* Makefile
