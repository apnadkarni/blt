lib_suffix =	@BLT_LIB_SUFFIX@
pkgdir =	@BLT_LIBRARY@
destdir =	$(pkgdir)/afm

INSTALL =	@INSTALL@
INSTALL_DATA =  @INSTALL_DATA@
RM =		rm -f
SHELL =		/bin/sh
MKDIR_P =	@MKDIR_P@

FILES = \
		AvantGarde-Book.afm \
		AvantGarde-BookOblique.afm \
